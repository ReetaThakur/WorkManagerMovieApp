<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:elevation="5dp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img"
        android:id="@+id/moviepost"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie id"
            android:id="@+id/tvMovieId"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Movie Name"
        android:id="@+id/tvMovieName"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Language"
            android:id="@+id/tvMovieLanguage"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Released Date"
            android:id="@+id/tvMovieReleasedData"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie Popularity"
            android:id="@+id/tvMoviePopularity"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Movie OverView"
            android:id="@+id/tvMoviePverView"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textColor="@color/black"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>